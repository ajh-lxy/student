<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.fh.mapper.StudentMapper">
    <!--根据手机号查询用户信息-->
    <select id="queryStuList"  resultType="com.fh.bean.StudentBean">
      select id,stuName,age,birthday,img,isDel,ip,address FROM s_student WHERE isDel=1
    </select>

    <!--添加-->
    <insert id="addStu" parameterType="com.fh.bean.StudentBean">
        insert into s_student (stuName,age,birthday,isDel,address,img)values
         (#{stuName},#{age},#{birthday},1,#{address},#{img})
    </insert>

    <!--回显-->
    <select id="getByIdStuBean" parameterType="java.lang.Integer" resultType="com.fh.bean.StudentBean">
         select id,stuName,age,birthday,img,isDel,ip,address FROM s_student WHERE isDel=1 and id=#{id}
    </select>
    <!--修改-->
    <update id="updateBook" parameterType="com.fh.bean.StudentBean">
        update s_student set stuName=#{stuName},age=#{age},img=#{img},address=#{address},birthday=#{birthday}
        where id=#{id}
    </update>
    <!--删除-->
    <delete id="deleteStu" parameterType="java.lang.Integer">
        update s_student set isDel=2
        where id=#{id}
    </delete>
</mapper>
